#!/usr/bin/env bash
# ----------------------------------------------------
#
#   New Script
#   -> Create an executable shell script
#
# ----------------------------------------------------

set -o errexit
set -o nounset
set -o pipefail

# ----------------------------------------------------
#   Error Handling
# ----------------------------------------------------

# Exit if file already exists
[ -e "$*" ] && echo "$* already exists" && exit

# ----------------------------------------------------
#   Main
# ----------------------------------------------------

echo '#!/usr/bin/env bash' >> "$*"
chmod +x "$*"
