# ----------------------------------------------------
#
#   Config
#   -> Environment settings
#
# ----------------------------------------------------

# ----------------------------------------------------
#   Terminal
# ----------------------------------------------------

# Disables ctrl+s and ctrl+q from reporting flow control
stty -ixon

# ----------------------------------------------------
#   Path
# ----------------------------------------------------

# ----- Homebrew ----- #

export PATH="/usr/local/bin:$PATH"

# ----- Scripts ----- #

export PATH="$HOME/.dotfiles/shell/scripts:$PATH"

# ----------------------------------------------------
#   Scripts
# ----------------------------------------------------

# ----- Autojump ----- #

[ -s "$(brew --prefix)/etc/autojump.$SHELL_EXT" ] && . "$(brew --prefix)/etc/autojump.$SHELL_EXT"

# ----- rbenv ----- #

eval "$(rbenv init - $SHELL_EXT)"

# ----------------------------------------------------
#   User Interface
# ----------------------------------------------------

# ----- Colors ----- #

# Enable colorful output globally
export CLICOLOR=1
