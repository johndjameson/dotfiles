# Make directory and navigate to it
mkcd() {
	mkdir -p "$1"
	cd "$1"
}

# Extract external ZIP archive
dlz() {
  wget -O tempzip "$1"
  unzip tempzip
  rm tempzip
}

shorten_git_status() {

  # Working directory clean
  if [ $(git status --porcelain | wc -l | tr -d ' ') -eq 0 ]; then
    printf "\nnothing to commit, working directory clean\n\n"

  # Working directory dirty
  else
    printf "\n"
    git status --short
    printf "\n"
  fi
}
