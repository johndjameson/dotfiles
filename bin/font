#!/usr/bin/env bash
# ****************************************************
#
#   Font
#   -> Configure Terminal font color and styles
#
# ----------------------------------------------------
#   Usage
# ----------------------------------------------------
#
#  `font red`
#
# ****************************************************

set -o errexit
set -o nounset
set -o pipefail

# ----------------------------------------------------
#   Variables
# ----------------------------------------------------

# ----- Colors ----- #

BLACK="$( tput setaf 0 )"
RED="$( tput setaf 1 )"
GREEN="$( tput setaf 2 )"
YELLOW="$( tput setaf 3 )"
BLUE="$( tput setaf 4 )"
MAGENTA="$( tput setaf 5 )"
CYAN="$( tput setaf 6 )"
WHITE="$( tput setaf 7 )"

# ----- Styles ----- #

BOLD="$( tput bold )"
UNDERLINE="$( tput smul )"
NOLINE="$( tput rmul )"
REVERSE="$( tput rev )"

# ----- Reset ----- #

DEFAULT="$( tput sgr0 )"

# ----------------------------------------------------
#   Main
# ----------------------------------------------------

case "$1" in

  # Colors
  'black'     ) printf "$BLACK"     ;;
  'red'       ) printf "$RED"       ;;
  'green'     ) printf "$GREEN"     ;;
  'yellow'    ) printf "$YELLOW"    ;;
  'blue'      ) printf "$BLUE"      ;;
  'magenta'   ) printf "$MAGENTA"   ;;
  'cyan'      ) printf "$CYAN"      ;;
  'white'     ) printf "$WHITE"     ;;

  # Styles
  'bold'      ) printf "$BOLD"      ;;
  'underline' ) printf "$UNDERLINE" ;;
  'noline'    ) printf "$NOLINE"    ;;
  'reverse'   ) printf "$REVERSE"   ;;

  # Reset
  'default'   ) printf "$DEFAULT"   ;;

esac
