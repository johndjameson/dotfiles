#!/usr/bin/env bash
# ****************************************************
#
#   New Script
#   -> Create an executable shell script
#
# ----------------------------------------------------
#   Usage
# ----------------------------------------------------
#
#  `new-script bin/script-name` - creates a new script called 'script-name'
#
# ****************************************************


set -o errexit
set -o nounset
set -o pipefail

# ----------------------------------------------------
#   Error Handling
# ----------------------------------------------------

# Exit if file already exists
[ -e "$1" ] && echo "$1 already exists" && exit

# ----------------------------------------------------
#   Main
# ----------------------------------------------------

if (( "$#" == 1 )); then
  echo '#!/usr/bin/env bash' >> "$1"
else
  echo "#!/usr/bin/env $2" >> "$1"
fi

chmod +x "$1"
