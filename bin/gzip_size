#!/usr/bin/env bash
# ****************************************************
#
#   Gzip Size
#   -> Report compression results
#
# ----------------------------------------------------
#   Usage
# ----------------------------------------------------
#
#  `gzip_size path/to/file`
#
# ****************************************************

set -o errexit
set -o nounset
set -o pipefail

# ----------------------------------------------------
#   Main
# ----------------------------------------------------

gzip -fk "$1"
ls -hl "$1".gz | awk '{ printf $5 }'
printf ' '
ls -l "$1".gz | awk '{ print $5 }'
rm "$1".gz
