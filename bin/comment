#!/usr/bin/env bash
# ****************************************************
#
#   Comment
#   -> Insert formatted comment strings
#
# ****************************************************

case "$1" in
  'l')
    echo "=============================================================="
    echo "==> $2"
    echo "=============================================================="
    ;;

  'm')
    echo "--------------------------------------------------------------"
    echo "--> $2"
    echo "--------------------------------------------------------------"
    ;;

  's')
    echo "--> $2"
    ;;
esac
