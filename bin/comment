#!/usr/bin/env bash
# ****************************************************
#
#   Comment
#   -> Insert formatted comment strings
#
# ----------------------------------------------------
#   Usage
# ----------------------------------------------------
#
#  `comment l 'Comment title'`
#  `comment m 'Comment title'`
#  `comment s 'Comment title'`
#
# ****************************************************

case "$1" in

  'l')
    echo "=============================================================="
    echo "==> $2"
    echo "=============================================================="
    ;;

  'm')
    echo "--------------------------------------------------------------"
    echo "--> $2"
    echo "--------------------------------------------------------------"
    ;;

  's')
    echo "--> $2"
    ;;

esac
