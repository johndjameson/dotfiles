snippet railsdb "Rails Database"
default: &default
	adapter: postgresql

development:
	<<: *default
	database: ${1:database_name}_development
	host: localhost

# Warning: The database defined as "test" will be erased and
# re-generated from your development database when you run "rake".
# Do not set this db to the same as development or production.
test:
	<<: *default
	database: $1_test

production:
	<<: *default
	database: $1_production$0
endsnippet
