snippet .. "Placeholder Comment"
# ...
endsnippet

snippet al "Alias"
alias ${1:name}='$0'
endsnippet

snippet coh "Heading Comment"
# *************************************
#
#   ${1:Title}
#   -> ${2:Description}
#
# *************************************$0
endsnippet

snippet col "Long Comment"
# -------------------------------------
#   ${1:Title}
# -------------------------------------$0
endsnippet

snippet cos "Sub-heading Comment"
# ----- ${1:Title} ----- #$0
endsnippet

snippet cof "Function Comment Heading"
# -------------------------------------
#   ${1:Title}
#   -> ${2:Description}
# -------------------------------------$0
#
# ${3:Arguments}
#
# Usage: \`$4\`
#$0
endsnippet

snippet cfunc "Function with Comment Heading"
# -------------------------------------
#   ${1:Title}
#   -> ${2:Description}
# -------------------------------------$0
#
# ${3:Arguments}
#
# Usage: \`$4\`
#

function ${5:function_name}() {
	${0:# ...}
}
endsnippet

snippet es "Echo"
echo "$0"
endsnippet

snippet func "Function"
function ${1:function_name}() {
	${0:# ...}
}
endsnippet

snippet if "If Statement"
if [ "$1" ]; then

	${0:# ...}

fi
endsnippet

snippet ife "If/Else Statement"
if [ "$1" ]; then

	${2:# ...}

else

	${0:# ...}

fi
endsnippet
