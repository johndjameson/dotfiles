--color
--color-filename=green
--color-lineno=white
--color-match=blue

# ----------------------------------------------------
#   Filetypes
# ----------------------------------------------------

--type-add=html=.haml
--type-add=ruby=.haml
--type-set=coffee=.coffee
--type-set=haml=.haml
--type-set=lock=.lock
--type-set=markdown=.markdown,.md
--type-set=md=.markdown,.md
--type-set=svg=.svg

# ----------------------------------------------------
#   Ignores
# ----------------------------------------------------

# ----- Filetypes ----- #

--nocss
--nolock
--nosvg

# ----- Directories ----- #

--ignore-dir=.sass-cache
--ignore-dir=bower_components
--ignore-dir=build
--ignore-dir=bundle
--ignore-dir=log
--ignore-dir=tmp

# ----------------------------------------------------
#   Search
